{
  "name": "guser",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --passWithNoTests",
    "test-watch": "jest --watch",
    "lint": "eslint . --ignore-path ./.lintignore",
    "format-fix": "prettier . --ignore-path ./.lintignore --write",
    "make-badges": "jest-coverage-badges --output './badges'"
  },
  "bin": "./index.js",
  "author": "jkurinsky@gmail.com",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-fix && npm run lint",
      "pre-push": "npm run test && npm run make-badges && git add badges/* && git commit -m 'update badges'"
    }
  },
  "dependencies": {
    "edit-json-file": "1.4.1",
    "kleur": "4.1.0",
    "prompts": "2.3.2",
    "shelljs": "0.8.4"
  },
  "devDependencies": {
    "eslint-config-node": "4.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "23.20.0",
    "husky": "4.2.5",
    "jest": "26.4.0",
    "jest-coverage-badges": "1.1.2",
    "prettier": "2.0.5"
  }
}
